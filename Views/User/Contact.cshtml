@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Music_Store.Models.Message
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel @ViewBag.Title</title>
    <link rel="icon" href="~/Images/icon3.png" type="image/png">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container" id="sheet" style="width:80%;">
        <div class="row" style="margin-top:5%;">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Contact</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Message", "User", FormMethod.Post))
                        {

                            @Html.TextBoxFor(x => x.name, new { placeholder = "Name", @class = "form-control field required", type = "text", name = "name" })<br />

                            @Html.TextBoxFor(x => x.email, new { placeholder = "Email", @class = "form-control field required", type = "email", name = "email" })<br />

                            @Html.TextAreaFor(x => x.message1, new { placeholder = "Message", @class = "form-control field required", type = "text", name = "message" })<br />

                            <input type="submit" value="Send" class="btn btn-lg btn-info btn-block" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
