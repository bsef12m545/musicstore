@{
    ViewBag.Title = "addAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if(Session["admin"]!=null)
{
    <body>
    <div class="container" id="sheet" style="width:80%;margin-top:3%;">
        <div class="row" style="margin-top:5%;">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add New Admin</h3>
                    </div>
                    <div class="panel-body">
                        <form id="loginform" action="/Admin/validateNewAdmin" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" id="login_username" name="username" type="email" required />
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" id="login_password" name="password" type="password" required />
                                </div>
                                <input type="submit" class="btn btn-lg btn-info btn-block" value="Submit">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

}
