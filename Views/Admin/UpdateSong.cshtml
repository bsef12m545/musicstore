@{
    ViewBag.Title = "UpdateSong";
}
@model Music_Store.Models.SongsInfo
<div class="container" style="margin-top:3%;">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Update Song</h3>
                </div>
                <div class="panel-body">
                    <form method="post" action="/Admin/EditSong">
                        <div class="form-group">
                            <input id="login_username" name="Id" type="text" value="@Model.Id" hidden="hidden" />
                        </div>
                        <div class="form-group">
                            <h4>Email:</h4><input class="form-control" id="login_username" name="name" type="text" value="@Model.name" required />
                        </div>
                        <div class="form-group">
                            <h4>Password:</h4><input class="form-control" id="login_username" name="singer" type="text" value="@Model.singer" required />
                        </div>
                        <div class="form-group">
                            <h4>Contact:</h4><input class="form-control" id="login_username" name="artist" type="text" value="@Model.artist" required />
                        </div>
                        <div class="form-group">
                            <h4>Country:</h4><input class="form-control" id="login_username" name="uploadBy" type="text" value="@Model.uploadBy" required />
                        </div>
                        <input class="btn btn-lg btn-info btn-block" type="submit" value="Update" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

