
@{
    ViewBag.Title = "Delete User Admin-Panel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" id="sheet" style="width:80%;">
    <h2 style="margin-left:40%;margin-top:5%;margin-bottom:10%;">Delete User</h2>
    <ul>
        <li style="margin-left:7%;margin-top:3%;">To delete a user select user and then press Delete button.</li>
    </ul>
    <table class="table table-bordered table-hover" style="margin-left:6%;margin-top:3%;width:90%;">
        <thead style="font-weight:700">
            <tr>
                <th>Select</th>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Country</th>
                <th>Question</th>
                <th>Answer</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Music_Store.Models.User u in @ViewBag.allusers)
                {
                    <tr>
                        <td><input type="radio" name="rad" id="@u.Id" /></td>
                        <td>@u.Id</td>
                        <td>@u.username</td>
                        <td>@u.password</td>
                        <td>@u.email</td>
                        <td>@u.contact</td>
                        <td>@u.country</td>
                        <td>@u.question</td>
                        <td>@u.answer</td>
                    </tr>
                }
            }
        </tbody>
    </table>

        <input type="submit" value="Delete" style="margin-left:82%;" /><br /><br /><br />
</div>



