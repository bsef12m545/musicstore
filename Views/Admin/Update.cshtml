@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Music_Store.Models.User
<div class="container" style="margin-top:3%;">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Update User</h3>
                </div>
                <div class="panel-body">
                    <form method="post" action="/Admin/Edit">
                        <div class="form-group">
                            <input id="login_username" name="Id" type="text" value="@Model.Id" hidden="hidden" />
                        </div>
                        <div class="form-group">
                            <h4>Email:</h4><input class="form-control" id="login_username" name="email" type="email" value="@Model.email" required />
                        </div>
                        <div class="form-group">
                            <h4>Password:</h4><input class="form-control" id="login_username" name="password" type="text" value="@Model.password" required />
                        </div>
                        <div class="form-group">
                            <h4>Contact:</h4><input class="form-control" id="login_username" name="contact" type="text" value="@Model.contact" required />
                        </div>
                        <div class="form-group">
                            <h4>Country:</h4><input class="form-control" id="login_username" name="country" type="text" value="@Model.country" required />
                        </div>
                            <input class="btn btn-lg btn-info btn-block" type="submit" value="Update" />
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
