
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel @ViewBag.Title</title>
    <link rel="icon" href="~/Images/icon3.png" type="image/png">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row" style="margin:1px;">
            <div class="container">
                <a href="/Admin/Index" style="margin-left:4%;"><img src="/Images/logo.png" /></a>
                @if(Session["admin"]!=null)
                { 
                <a href="/User/Index" style="margin-right:10%;margin-top:2%;color:white;" class="pull-right">Visit Website</a>
                }
            </div>

            <nav class="navbar navbar-inverse" style="margin-left:2.5%;margin-right:2.5%;background-color:black;height:15px;">
                <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target="#option">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="option">
                    <img class="img-rounded pull-left" src="/Images/pic.jpg" style="height:40px;width:40px;margin:4px;" />
                    <ul class="nav navbar-nav" id="menu" style="margin-left:5%;">
                        <li class=" active"><a href="/Admin/Home">Home</a></li>
                        <li class=" active"><a href="/Admin/ViewAllUsers">View Users</a></li>
                        <li class=" active"><a href="/Admin/ViewAllSongs">View Songs</a></li>
                        <li class=" active"><a href="/Admin/Upload">Upload Songs</a></li>
                        <li class="active pull-right"><a href="/Admin/LogOut">Log Out</a></li>
                        <li class="active pull-right"><a href="/Admin/addAdmin">Add New Admin</a></li>
                    </ul>

                </div>
            </nav>
        </div>
    </div>
    @RenderBody()

    <footer class="footer navbar-fixed-bottom">
        <div id="footer">
            Copyright © Nisar Akram Malhi (BSEF12M545)
        </div>
    </footer>
</body>
</html>
