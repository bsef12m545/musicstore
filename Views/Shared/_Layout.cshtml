@using Music_Store.Models
@{User user=(User)HttpContext.Current.Session["user"];}

<!DOCTYPE>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Images/icon3.png" type="image/png" id="logo">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:black; margin-bottom:100%;">
                <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target="#option">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="option">
                    <a href="/User/Index" class="pull-left"><img src="/Images/logo.png" /></a>
                    <ul class="nav navbar-nav" id="menu" style="margin-top:1%;margin-left:5%;">
                        <li class=" active"><a href="/User/Index"><span class="glyphicon glyphicon-home"></span>&nbsp;Home</a></li>
                        <li class=" active"><a href="/User/Playlist"><span class="glyphicon glyphicon-search"></span>&nbsp;Explore</a></li>
                        <li class=" active" id="categories"><a href="/User/Categories"><span class="glyphicon glyphicon-chevron-down"></span>&nbsp;Categories</a></li>
                        <li class=" active" id="topsingers"><a href="/User/TopSingers"><span class="glyphicon glyphicon-star"></span>&nbsp;Top Singers</a></li>
                        <li class=" active" id="contact"><a href="/User/Contact"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Contact</a></li>
                    </ul>
                    <ul class="nav navbar-nav pull-right" id="menu" style="margin-right:4%;margin-top:1%;">
                        @if (user == null)
                        {
                            <li id="upload"><a href="/User/Upload"><span class="glyphicon glyphicon-upload"></span>Upload</a></li>
                            <li id="signin"><a href="/User/SignIn"><span class="glyphicon glyphicon-log-in"></span> Sign In</a></li>
                            <li id="register"><a href="/User/Register"><span class="glyphicon glyphicon-registration-mark"></span> Register</a></li>
                            <li id="adminSignin"><a href="/Admin/Index"><span class="glyphicon glyphicon-briefcase"></span>Admin</a></li>
                        }@if (user != null)
                        {
                            <li id="upload"><a href="/User/Upload"><span class="glyphicon glyphicon-upload"></span>Upload</a></li>
                            <li id="logout"><a href="/User/LogOut"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    @RenderBody()

</body>
</html>